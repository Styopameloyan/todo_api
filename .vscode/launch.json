{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Nodemon",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "runtimeArgs": [
                "--inspect-brk=0.0.0.0:9229",
                "--exec",
                "ts-node",
                "--",
                "${workspaceFolder}/src/server.ts"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}